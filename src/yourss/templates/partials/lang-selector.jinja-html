{% if config.custom_langs %}
<div class="position-fixed" style="top: 15px; right: 15px; z-index: 1030;">
  <select id="yourss-lang-selector" class="form-select form-select-sm" title="Change language" style="filter: grayscale(1);">
    <option value="">🌐</option>
    {% for language in config.custom_langs %}
    <option value="{{ language }}"{% if lang == language %} selected{% endif %}>{{ language|upper }}</option>
    {% endfor %}
  </select>
</div>
{% endif %}